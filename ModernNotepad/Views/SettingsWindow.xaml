<Window x:Class="ModernNotepad.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:conv="clr-namespace:ModernNotepad.Converters"
        mc:Ignorable="d"
        Title="Ajustes" 
        Height="325" Width="250"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterOwner"
        ui:WindowHelper.UseModernWindowStyle="True">
    <Window.Resources>
        <conv:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibility"/>
    </Window.Resources>
    
    <StackPanel Margin="10">
        <ui:ToggleSwitch Header="Ajuste de línea" Margin="5,10"
                         IsOn="{Binding IsWordWrapEnabled}"/>
        <ui:ToggleSwitch Header="Corrector ortográfico" Margin="5,10" 
                         IsOn="{Binding IsSpellCheckingEnabled}"/>
        <ui:ToggleSwitch Header="Barra de estado" Margin="5,10" OffContent="Oculto" OnContent="Visible"
                         IsOn="{Binding IsStatusBarVisible}"/>
        <ui:ToggleSwitch Header="Tema de aplicación" Margin="5,10" OffContent="Claro" OnContent="Oscuro"
                         IsOn="{Binding IsDarkThemeRequested}">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="Toggled">
                    <i:InvokeCommandAction Command="{Binding ToggleThemeCommand}" 
                                           CommandParameter="{Binding IsDarkThemeRequested}"/>
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </ui:ToggleSwitch>
        <!--<GroupBox Margin="0,10">
            <GroupBox.Header>
                <StackPanel Orientation="Horizontal">
                    <ui:FontIcon Glyph="&#xE793;" Margin="0,0,5,0"/>
                    <TextBlock Text="Tema de la aplicación" FontSize="14"/>
                </StackPanel>
            </GroupBox.Header>
            <StackPanel Orientation="Horizontal" Margin="0, -10">
                <RadioButton Content="Claro" IsChecked="{Binding IsDarkThemeRequested}"/>
                <RadioButton Content="Oscuro" 
                             IsChecked="{Binding IsDarkThemeRequested, Converter={StaticResource InverseBooleanToVisibility}}"/>
            </StackPanel>
        </GroupBox>-->
    </StackPanel>
</Window>
